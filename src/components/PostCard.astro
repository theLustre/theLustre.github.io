---
interface Props {
	title: string;
	description?: string;
	date?: Date;
	url: string;
	tags?: string[];
}

const { title, description, date, url, tags = [] } = Astro.props;
---
<a href={url} class="post-card">
	<div class="post-content">
		<h2 class="post-title">{title}</h2>
		{description && <p class="post-description">{description}</p>}
		<div class="post-meta">
			{date && (
				<span class="post-date">
					{date.toLocaleDateString("zh-CN", {
						year: "numeric",
						month: "2-digit",
						day: "2-digit",
					})}
				</span>
			)}
			{tags.length > 0 && (
				<div class="post-tags">
					{tags.slice(0, 3).map((tag) => (
						<span class="post-tag">{tag}</span>
					))}
				</div>
			)}
		</div>
	</div>
	<div class="post-arrow">
		<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor">
			<path d="M5 12h14M12 5l7 7-7 7" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
		</svg>
	</div>
</a>

<style>
	.post-card {
		display: flex;
		align-items: center;
		justify-content: space-between;
		border-radius: 16px;
		background: rgba(255, 255, 255, 0.04);
		backdrop-filter: blur(10px);
		padding: 1.5rem;
		border: 1px solid rgba(255, 255, 255, 0.08);
		text-decoration: none;
		color: inherit;
		transition: all 0.2s;
		margin-bottom: 1rem;
		position: relative;
	}

	.post-card::before {
		content: "";
		position: absolute;
		left: 0;
		top: 50%;
		transform: translateY(-50%);
		width: 3px;
		height: 40px;
		background: #5b9aff;
		border-radius: 0 2px 2px 0;
		opacity: 0;
		transition: opacity 0.2s;
	}

	.post-card:hover {
		transform: translateY(-4px);
		border-color: #5b9aff;
	}

	.post-card:hover::before {
		opacity: 1;
	}

	.post-content {
		flex: 1;
	}

	.post-title {
		font-size: 1.25rem;
		font-weight: bold;
		margin: 0 0 0.5rem 0;
		transition: color 0.2s;
	}

	.post-card:hover .post-title {
		color: #5b9aff;
	}

	.post-description {
		color: rgba(249, 250, 251, 0.7);
		margin: 0.5rem 0;
		line-height: 1.6;
		font-size: 0.9rem;
	}

	.post-meta {
		display: flex;
		align-items: center;
		gap: 1rem;
		margin-top: 0.75rem;
		flex-wrap: wrap;
	}

	.post-date {
		font-size: 0.85rem;
		color: rgba(249, 250, 251, 0.5);
	}

	.post-tags {
		display: flex;
		gap: 0.5rem;
		flex-wrap: wrap;
	}

	.post-tag {
		font-size: 0.75rem;
		padding: 0.2rem 0.5rem;
		border-radius: 999px;
		background: rgba(91, 154, 255, 0.15);
		color: #8dd0ff;
	}

	.post-arrow {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 48px;
		height: 48px;
		border-radius: 12px;
		background: rgba(91, 154, 255, 0.1);
		color: #5b9aff;
		transition: all 0.2s;
		flex-shrink: 0;
		margin-left: 1rem;
	}

	.post-card:hover .post-arrow {
		background: rgba(91, 154, 255, 0.2);
		transform: translateX(4px);
	}

	@media (max-width: 768px) {
		.post-card {
			flex-direction: column;
			align-items: flex-start;
		}

		.post-arrow {
			display: none;
		}

		.post-card::before {
			display: none;
		}
	}
</style>

